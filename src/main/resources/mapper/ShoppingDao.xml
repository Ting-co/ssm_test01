<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmtest01.dao.ShoppingDao">
    <resultMap id="shopping" type="com.ssmtest01.bean.Shopping">
        <id column="id" property="id"></id>
        <result column="sid" property="sid"></result>
        <result column="uid" property="uid" />
        <result column="sum" property="sum" />
        <collection property="commoditys" ofType="com.ssmtest01.bean.Commoditys">
            <id column="sid" property="sid"/>
            <result column="uid" property="uid"/>
            <result column="commodity" property="commodity"/>
            <result column="price" property="price"/>
            <result column="amount" property="amount"/>
            <result column="simage" property="simage"/>
        </collection>
    </resultMap>

    <select id="all" resultMap="shopping">
        select  * from shopping as s left join commoditys as c  on s.sid=c.sid
        where s.uid=#{uid}
    </select>

</mapper>