<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmtest01.dao.ShoppingDao">
    <resultMap id="shopping" type="com.ssmtest01.bean.Shopping">
        <id column="id" property="id"></id>
        <result column="sid" property="sid"></result>
        <result column="uid" property="uid" />
        <result column="sum" property="sum" />
        <association property="commoditys" column="sid" select="com.ssmtest01.dao.CommoditysDao.getall" >
           <!-- <id column="sid" property="sid"/>
            <result column="uid" property="uid"/>
            <result column="commodity" property="commodity"/>
            <result column="price" property="price"/>
            <result column="amount" property="amount"/>
            <result column="simage" property="simage"/>-->

        </association>
    </resultMap>

    <select id="all" resultMap="shopping">
        select  * from shopping
        where shopping.uid=#{uid}
    </select>

</mapper>