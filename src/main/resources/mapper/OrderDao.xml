<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmtest01.dao.OrderDao">

    <resultMap id="Orders"  type="com.ssmtest01.bean.Order">
        <id column="oid" property="oid"/>
        <result column="sstate" property="sstate" />
        <result column="bstate" property="bstate" />
        <result column="odate" property="odate" />
        <result column="okdate" property="okdate" />
        <result column="payment" property="payment" />
        <result column="amount" property="amount" />
        <result column="uid" property="uid" />
        <result column="sid" property="sid" />
        <result column="sid" property="cid" />
        <association property="commoditys"    column="cid"   resultMap="commodity" />
    </resultMap>

    <resultMap id="commodity" type="com.ssmtest01.bean.Commoditys">
        <id column="sid" property="sid"/>
        <result column="uid" property="uid"/>
        <result column="commodity" property="commodity"/>
        <result column="synopsis" property="synopsis"/>
        <result column="price" property="price"/>
        <result column="amount" property="amount"/>
        <result column="simage" property="simage"/>
    </resultMap>

    <delete id="delorderAndshopping"  >
        delete from shopping_order sorder
        where sorder.oid not in(SELECT o.oid FROM myorder o )
    </delete>


    <update id="updataOrder" parameterType="com.ssmtest01.bean.Order">
        update myorder
        <set>
            <if test="order.sstate != null and order.sstate != ''">
                sstate=#{order.sstate},
            </if>
            <if test="order.bstate != null and order.bstate != ''">
                bstate=#{order.bstate},
            </if>
            <if test="order.okdate != null and order.okdate != ''">
                okdate=#{order.okdate},
            </if>
        </set>
        where oid=#{order.oid}
    </update>

    <select id="selOrder" resultMap="Orders" >
        select * from
                      myorder o
                          join  commoditys c on c.sid=o.cid

           <where>
               <if test="order.oid != null and order.oid != ''">
                    AND  o.oid=#{order.oid}
               </if>
               <if test="order.uid != null and order.uid != ''">
                   AND   o.uid=#{order.uid}
               </if>
               <if test="order.sid != null and order.sid != ''">
                   AND  o.sid=#{order.sid}
               </if>


           </where>

    </select>

</mapper>