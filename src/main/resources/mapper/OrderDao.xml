<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmtest01.dao.OrderDao">

    <delete id="delorderAndshopping"  >
        delete from shopping_order sorder
        where sorder.oid not in(SELECT o.oid FROM myorder o )
    </delete>


    <update id="updataOrder" parameterType="com.ssmtest01.bean.Order">
        update myorder
        <set>
            <if test="order.sstate != null and order.sstate != ''">
                sstate=#{order.sstate},
            </if>
            <if test="order.bstate != null and order.bstate != ''">
                bstate=#{order.bstate},
            </if>
            <if test="order.okdate != null and order.okdate != ''">
                okdate=#{order.okdate},
            </if>
        </set>
        where oid=#{order.oid}
    </update>

</mapper>