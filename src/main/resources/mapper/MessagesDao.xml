<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmtest01.dao.MessagesDao">


    <delete id="delBysId" parameterType="com.ssmtest01.bean.Messages">
        delete from messages where mid=#{mid}
    </delete>

    <select id="userAll" resultType="com.ssmtest01.bean.Messages">
        select * from messages
        <where>
            uid=#{messages.uid}
            <if test="messages.message != null and messages.message != ''">
               AND message LIKE  CONCAT('%', #{messages.message}, '%')
            </if>
        </where>
    </select>

</mapper>